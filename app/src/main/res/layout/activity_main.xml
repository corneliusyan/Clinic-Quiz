<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/quiz_background"
    android:orientation="horizontal"
    tools:context="com.example.android.clinicquiz.MainActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="18"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginStart="8dp"
            android:src="@drawable/clinic_quiz"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            >
            <RelativeLayout
                android:id="@+id/textbox"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:background="@drawable/textbox"
                >
                <TextView
                    android:id="@+id/lblnama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginStart="16dp"
                    android:text="Brain Quiz : Number "
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/lblnomor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/lblnama"
                    android:text="1"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="10dp"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/lblsoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblnama"
                    android:layout_toEndOf="@id/gbrsoal"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:text="A"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    android:textColor="#ffffff"
                    />
                <ImageView
                    android:id="@+id/gbrsoal"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@id/lblnama"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/s2_1_29"
                    />
                <ImageView
                    android:id="@+id/btnno"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/no"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/btnyes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/yes"
                    android:layout_toStartOf="@id/btnno"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/btnnext"
                    android:visibility="invisible"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@id/btnyes"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_next"/>
            </RelativeLayout>
            <LinearLayout
                android:baselineAligned="false"
                android:id="@+id/gbrmenu"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/menuiq"
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:src="@drawable/brain"/>
                    <Button
                        android:id="@+id/btniq"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="IQ Test"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:backgroundTint="#32abdc"
                        android:fontFamily="serif"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menucolor"
                    android:layout_marginEnd="30dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:src="@drawable/colorblind"
                        />
                    <Button
                        android:id="@+id/btncolor"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Colorblind Test"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="#ff7832"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chatbox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            android:background="@drawable/chatbox">
            <TextView
                android:id="@+id/lblchat"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45sp"
                android:layout_marginStart="30sp"
                android:textColor="#ffffff"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:text="Welcome to the Quiz Center !\n\nPlease choose one of the categories."/>
            <ImageView
                android:id="@+id/btnskip"
                android:visibility="visible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/skip"
                android:scaleType="fitXY"
                android:layout_margin="10dp"

                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="10">
        <ImageView
            android:id="@+id/btnexit"
            android:layout_margin="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_exit"/>

        <ImageView
            android:id="@+id/suster"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_marginTop="12dp"
            android:src="@drawable/suster1" />

    </RelativeLayout>


</LinearLayout>
